#!/bin/bash
set -u

### standard ENV ##########
if `locale -a | grep ja-JP.utf8` ; then
  export PATH=$PATH:$bin_path:$linux_brew_path
fi

export LANG=ja_JP.UTF-8
export CLICOLOR=1
export LSCOLORS=gxGxcxdxCxegedabagacad
export EDITOR="vim"
export PAGER="less"
export VISUAL="vim"

#### myself ENV ########################################
export MY_DOC_ROOT="$HOME/_document"
export L_OSTYPE=`uname`
uname -a | grep "microsoft" | grep "Linux">/dev/null && if [ $? -eq 0 ]; then
  export L_OSTYPE=Windows_Linux
fi

#### PATH ##############################################
export GOPATH="$HOME"
export ZDOTDIR="$HOME/.zsh"
bin_path='/usr/local/bin:$GOPATH/bin:$HOME/bin:$HOME/.anyenv/bin'
linux_brew_path='/home/linuxbrew/.linuxbrew/bin:/home/linuxbrew/.linuxbrew/sbin'
if [ -z ${TMUX:-} ]; then
  export PATH=$PATH:$bin_path:$linux_brew_path
fi